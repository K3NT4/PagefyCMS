@page "{id:int}"
@inject PagefyCMS.Data.PagefyDbContext Context
@model PagefyCMS.Pages.Admin.Articles.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Redigera artikel";
    var editorType = Context.Settings.FirstOrDefault(s => s.Key == "EditorType")?.Value ?? "tinymce";
}

<h2>Redigera artikel</h2>

<form method="post" class="mt-4">
    <input type="hidden" asp-for="EditArticle.Id" />

    <div class="mb-3">
        <label asp-for="EditArticle.Headline" class="form-label">Rubrik</label>
        <input asp-for="EditArticle.Headline" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="EditArticle.Slug" class="form-label">Slug</label>
        <input asp-for="EditArticle.Slug" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="EditArticle.Content" class="form-label">Innehåll</label>
        <textarea asp-for="EditArticle.Content" id="contentArea" class="form-control" rows="8"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Spara ändringar</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Avbryt</a>
</form>

@section Scripts {
    @if (editorType == "tinymce")
    {
        @await Html.PartialAsync("_TinyMce")
    }
    else if (editorType == "toastui")
    {
        @await Html.PartialAsync("_ToastUi")
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const headlineInput = document.querySelector('input[name="EditArticle.Headline"]');
            const slugInput = document.querySelector('input[name="EditArticle.Slug"]');

            headlineInput.addEventListener("input", function () {
                let slug = headlineInput.value.toLowerCase()
                    .replace(/\s+/g, '-')          
                    .replace(/[^a-z0-9\-]/g, '')    
                    .replace(/\-+/g, '-')           
                    .replace(/^-+|-+$/g, '');       

                slugInput.value = slug;
            });
        });
    </script>
}
