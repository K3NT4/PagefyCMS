@page
@model PagefyCMS.Pages.Admin.Articles.IndexModel
@{
    Layout = "_AdminLayout";
}

<h2>Artiklar / Nyheter</h2>

<a class="btn btn-primary mb-3" asp-page="./Create">Skapa ny artikel</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Rubrik</th>
            <th>Slug</th>
            <th>Publicerad</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
@foreach (var article in Model.Articles)
{
    <tr>
        <td>@article.Headline</td>
        <td>@article.Slug</td>
        <td>@article.PublishedAt.ToString("yyyy-MM-dd")</td>
        <td>
            <a class="btn btn-sm btn-warning" asp-page="./Edit" asp-route-id="@article.Id">Redigera</a>
            <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@article.Id">Ta bort</a>
        </td>
    </tr>
}
    </tbody>
</table>
