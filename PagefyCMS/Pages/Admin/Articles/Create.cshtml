@page
@inject PagefyCMS.Data.PagefyDbContext Context
@model PagefyCMS.Pages.Admin.Articles.CreateModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Skapa ny artikel";
}

<h2>Skapa ny artikel</h2>

<form method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="NewArticle.Headline" class="form-label">Rubrik</label>
        <input asp-for="NewArticle.Headline" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="NewArticle.Slug" class="form-label">Slug (Lämna tom för automatisk)</label>
        <input asp-for="NewArticle.Slug" class="form-control" />
    </div>

    <div class="card mb-3">
        <div class="card-header">
            SEO Inställningar
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="NewArticle.MetaTitle" class="form-label">Meta Titel</label>
                <input asp-for="NewArticle.MetaTitle" class="form-control" />
                <div class="form-text">Titeln som visas i sökresultat och webbläsarfliken.</div>
            </div>
            <div class="mb-3">
                <label asp-for="NewArticle.MetaDescription" class="form-label">Meta Beskrivning</label>
                <textarea asp-for="NewArticle.MetaDescription" class="form-control" rows="3"></textarea>
                <div class="form-text">Kort beskrivning som visas i sökresultat.</div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_MediaGalleryModal")
    @await Component.InvokeAsync("EditorSelector")

    <div class="mb-3">
        <label asp-for="NewArticle.Content" class="form-label">Innehåll</label>
        <textarea asp-for="NewArticle.Content" id="contentArea" class="form-control" rows="8"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Publicera</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Avbryt</a>
</form>

@section Scripts {
    <script src="/js/gallery-helper.js"></script>
}
