@page
@model PagefyCMS.Pages.Admin.DashboardModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Översikt";
}

<h2 class="mb-4">Adminpanel - Översikt</h2>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-bg-primary shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Sidor</h5>
                <p class="display-6">@Model.PageCount</p>
                <a class="btn btn-light btn-sm" asp-page="/Admin/Pages/Index">Hantera sidor</a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-bg-success shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Artiklar</h5>
                <p class="display-6">@Model.ArticleCount</p>
                <a class="btn btn-light btn-sm" asp-page="/Admin/Articles/Index">Hantera artiklar</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
    <div class="card text-bg-warning shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Bilder</h5>
            <p class="display-6">@Model.MediaCount</p>
            <a class="btn btn-light btn-sm" asp-page="/Admin/Media/Index">Hantera bilder</a>
        </div>
    </div>
</div>
</div>
