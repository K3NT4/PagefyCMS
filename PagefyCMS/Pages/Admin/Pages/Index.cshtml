@page
@model PagefyCMS.Pages.Admin.Pages.IndexModel
@{
    Layout = "_AdminLayout";
}

<h2>Sidor</h2>

<a class="btn btn-primary mb-3" asp-page="./Create">Skapa ny sida</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Slug</th>
            <th>Skapad</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pages)
{
    <tr>
        <td>@item.Title</td>
        <td>@item.Slug</td>
        <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
        <td>
            <a class="btn btn-sm btn-warning" asp-page="./Edit" asp-route-id="@item.Id">Redigera</a>
            <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Ta bort</a>
        </td>
    </tr>
}
    </tbody>
</table>
