@page "{id:int}"
@model PagefyCMS.Pages.Admin.Pages.DeleteModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Ta bort sida";
}

<h2>Ta bort sida</h2>

@if (Model.PageData != null)
{
    <div class="alert alert-warning">
        Är du säker på att du vill ta bort sidan <strong>@Model.PageData.Title</strong>?
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Ja, ta bort</button>
        <a asp-page="/Admin/Pages/Index" class="btn btn-secondary ms-2">Avbryt</a>
    </form>
}
else
{
    <div class="alert alert-danger">Sidan kunde inte hittas.</div>
}
