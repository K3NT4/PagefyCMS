@page "{id:int}"
@inject PagefyCMS.Data.PagefyDbContext Context
@model PagefyCMS.Pages.Admin.Pages.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Redigera sida";
}

<h2>Redigera sida</h2>

<form method="post" class="mt-4">
    <input type="hidden" asp-for="EditPage.Id" />

    <div class="mb-3">
        <label asp-for="EditPage.Title" class="form-label">Titel</label>
        <input asp-for="EditPage.Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="EditPage.Slug" class="form-label">Slug</label>
        <input asp-for="EditPage.Slug" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="EditPage.GalleryGroup" class="form-label">Galleri-grupp (valfritt)</label>
        <input asp-for="EditPage.GalleryGroup" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="EditPage.ShowInMenu" class="form-check-input" type="checkbox" />
        <label asp-for="EditPage.ShowInMenu" class="form-check-label">Visa i meny</label>
    </div>

    @await Component.InvokeAsync("EditorSelector")

    <div class="mb-3">
        <label asp-for="EditPage.Content" class="form-label">Innehåll</label>
        <textarea asp-for="EditPage.Content" class="form-control" rows="8" id="contentArea"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Spara ändringar</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Avbryt</a>
</form>

@section Scripts {
    <script src="/js/gallery-helper.js"></script>
}
