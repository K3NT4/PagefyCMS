@page
@inject PagefyCMS.Data.PagefyDbContext Context
@model PagefyCMS.Pages.Admin.Pages.CreateModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Skapa ny sida";
}

<h2>Skapa ny sida</h2>

<form method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="NewPage.Title" class="form-label">Titel</label>
        <input asp-for="NewPage.Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="NewPage.Slug" class="form-label">Slug (Lämna tom för automatisk)</label>
        <input asp-for="NewPage.Slug" class="form-control" />
    </div>

    <div class="card mb-3">
        <div class="card-header">
            SEO Inställningar
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="NewPage.MetaTitle" class="form-label">Meta Titel</label>
                <input asp-for="NewPage.MetaTitle" class="form-control" />
                <div class="form-text">Titeln som visas i sökresultat och webbläsarfliken.</div>
            </div>
            <div class="mb-3">
                <label asp-for="NewPage.MetaDescription" class="form-label">Meta Beskrivning</label>
                <textarea asp-for="NewPage.MetaDescription" class="form-control" rows="3"></textarea>
                <div class="form-text">Kort beskrivning som visas i sökresultat.</div>
            </div>
        </div>
    </div>
<div class="mb-3">
    <label asp-for="NewPage.GalleryGroup" class="form-label">Galleri-grupp (valfritt)</label>
    <input asp-for="NewPage.GalleryGroup" class="form-control" />
</div>
@await Html.PartialAsync("_MediaGalleryModal")
@await Component.InvokeAsync("EditorSelector")

<div class="mb-3">
    <label asp-for="NewPage.Content" class="form-label">Innehåll</label>
    <textarea asp-for="NewPage.Content" class="form-control" rows="8" id="contentArea"></textarea>
</div>

    <div class="form-check mb-3">
    <input asp-for="NewPage.ShowInMenu" class="form-check-input" type="checkbox" />
    <label asp-for="NewPage.ShowInMenu" class="form-check-label">Visa i meny</label>
</div>

    <button type="submit" class="btn btn-success">Publicera</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Avbryt</a>
</form>

@section Scripts {
    <script src="/js/gallery-helper.js"></script>
}

