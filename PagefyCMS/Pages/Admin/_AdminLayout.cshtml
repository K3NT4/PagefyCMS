@inject IHttpContextAccessor ContextAccessor
@inject PagefyCMS.Data.PagefyDbContext Context

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - PagefyCMS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Admin always uses standard site.css, not the active theme -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <a class="navbar-brand" asp-page="/Admin/Dashboard">
            <i class="bi bi-speedometer2"></i> @(Context.Settings.FirstOrDefault(s => s.Key == "SiteTitle")?.Value ?? "PagefyCMS") Admin
        </a>

        @if (ContextAccessor.HttpContext.Session.GetString("LoggedIn") == "true")
        {
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Pages/Index"><i class="bi bi-file-earmark-text"></i> Pages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Articles/Index"><i class="bi bi-newspaper"></i> Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Media/Index"><i class="bi bi-image"></i> Media</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Settings/Addons"><i class="bi bi-puzzle"></i> Addons</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Settings/Themes"><i class="bi bi-palette"></i> Themes</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Settings/Languages"><i class="bi bi-translate"></i> Languages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Settings/Settings"><i class="bi bi-gear"></i> Settings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
                    </li>
                </ul>
            </div>
        }
    </div>
</nav>

<div class="container mt-5">
    @RenderBody()
</div>

<footer class="footer text-muted mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                &copy; 2025 - @(Context.Settings.FirstOrDefault(s => s.Key == "SiteTitle")?.Value ?? "PagefyCMS")
            </div>
            <div class="col-md-6 text-end">
                <a href="/" class="text-muted">← Back to Website</a>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await Html.PartialAsync("_MediaGalleryModal")
@RenderSection("Scripts", required: false)

</body>
</html>
