@page
@model StartpageDesignModel
@{
    ViewData["Title"] = "Homepage Design";
}

<h1>Homepage Design</h1>

<form method="post" id="startpageForm">
    <div>
        <h3>Choose Layout:</h3>
        <label><input type="radio" name="Layout" value="single-column" @(Model.Settings.Layout == "single-column" ? "checked" : "") /> Single Column</label><br />
        <label><input type="radio" name="Layout" value="two-columns" @(Model.Settings.Layout == "two-columns" ? "checked" : "") /> Two Columns</label><br />
        <label><input type="radio" name="Layout" value="grid" @(Model.Settings.Layout == "grid" ? "checked" : "") /> Grid Layout</label>
    </div>

    <div>
        <h3>Choose Sections:</h3>
        @foreach (var sec in Model.Sections)
        {
            <label>
                <input type="checkbox" name="Sections" value="@sec" @(Model.Settings.Sections.Contains(sec) ? "checked" : "") />
                @sec
            </label><br />
        }
    </div>

    <div>
        <h3>Color Selection:</h3>
        <label>Background Color: <input type="color" name="BackgroundColor" value="@Model.Settings.Colors.Background" /></label><br />
        <label>Primary Color: <input type="color" name="PrimaryColor" value="@Model.Settings.Colors.Primary" /></label><br />
        <label>Text Color: <input type="color" name="TextColor" value="@Model.Settings.Colors.Text" /></label>
    </div>

    <div>
        <h3>Hero Background:</h3>
        <input type="text" name="HeroBackground" placeholder="/uploads/hero.webp" value="@Model.Settings.HeroBackground" />
    </div>

    <button type="submit">💾 Save Changes</button>
</form>
