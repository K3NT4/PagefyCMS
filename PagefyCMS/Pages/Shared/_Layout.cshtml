@inject PagefyCMS.Data.PagefyDbContext Context
@inject PagefyCMS.Services.IThemeManager ThemeManager

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Context.Settings.FirstOrDefault(s => s.Key == "SiteTitle")?.Value ?? "PagefyCMS")</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @{
        var activeThemeId = ThemeManager.GetActiveThemeId() ?? "framtidsdesign";
        var themeStylePath = $"~/themes/{activeThemeId}/style.css";
    }
    <link rel="stylesheet" href="@themeStylePath" asp-append-version="true" />
</head>
<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">
                <i class="bi bi-rocket-fill"></i> @(Context.Settings.FirstOrDefault(s => s.Key == "SiteTitle")?.Value ?? "PagefyCMS")
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index"><i class="bi bi-house-fill"></i> Hem</a>
                    </li>
                    @foreach (var menuPage in Context.Pages.Where(p => p.ShowInMenu).ToList())
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/@menuPage.Slug">@menuPage.Title</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Login"><i class="bi bi-lock-fill"></i> Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="container mt-5 mb-5">
    @RenderBody()
</main>

<footer class="footer text-muted mt-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                &copy; 2025 - @(Context.Settings.FirstOrDefault(s => s.Key == "SiteTitle")?.Value ?? "PagefyCMS")
            </div>
            <div class="col-md-6 text-end">
                <a href="/Admin/Login" class="text-muted me-3">Admin Login</a>
                <a href="https://github.com" class="text-muted"><i class="bi bi-github"></i></a>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await Html.PartialAsync("_MediaGalleryModal")
@RenderSection("Scripts", required: false)
</body>
</html>
