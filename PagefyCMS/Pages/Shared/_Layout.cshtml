@inject PagefyCMS.Data.PagefyDbContext Context

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Context.Settings.FirstOrDefault(s => s.Key == "SiteTitle")?.Value ?? "PagefyCMS")</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">
                @(Context.Settings.FirstOrDefault(s => s.Key == "SiteTitle")?.Value ?? "PagefyCMS")
            </a>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Index">Hem</a>
                </li>
                @foreach (var menuPage in Context.Pages.Where(p => p.ShowInMenu).ToList())
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/@menuPage.Slug">@menuPage.Title</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
</header>

<div class="container mt-4">
    @RenderBody()
</div>

<footer class="footer text-muted mt-4">
    <div class="container">
        &copy; 2025 - @(Context.Settings.FirstOrDefault(s => s.Key == "SiteTitle")?.Value ?? "PagefyCMS")
        <a class="float-end" href="/Admin/Login">Admin Login</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await Html.PartialAsync("_MediaGalleryModal")
@RenderSection("Scripts", required: false)
</body>
</html>
